{{!-- ARTICLES GO ISIDE THIS DIV --}}
<div class="container-fluid articleBox">
    <ul>
        {{#each article}}
        {{#if saved}}

        <li>
            <div class="card">
                <div class="card-header">
                    Breaking News!
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">{{summary}}</p>
                    <a href="{{link}}" class="btn btn-primary">Article</a>
                    <button type="button" class="btn btn-info comment float-right" data-toggle="modal"
                        data-target="#commmentModal" data-id="{{_id}}">View
                        Comments</button>
                    <button class="btn btn-info delete float-right" data-id="{{_id}}">Delete From Saved</button>
                </div>
            </div>

            {{!-- modal --}}
            <!-- Modal -->
            <div class="modal fade" id="commentModal{{_id}}" tabindex="-1" role="dialog"
                aria-labelledby="commentModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="commentModalLabel">Comments for Article: {{_id}} </h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            {{#each comment}}
                            {{title}}{{body}}
                            {{/each}}
                        </div>
                        <div class="modal-footer">
                            <input placeholder="new comment title" type="text" id="newCommentTitle{{_id}}">
                            <input placeholder="new comment body" type="text" id="newCommentBody{{_id}}">

                            <button type="button" class="btn btn-primary saveComment" id="saveComment{{_id}}"
                                data-id="{{_id}}">Save
                                Comment</button>
                        </div>
                    </div>
                </div>
            </div>
            {{/if}}
            {{/each }}



        </li>

    </ul>
</div>

<footer class="footer">
    <div class="container">
        <p>The Guardian Scraper</p>
    </div>
</footer>

